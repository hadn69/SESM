@using SESM.Tools
@model SESM.Models.Views.Mod.UploadModViewModel
@{
    ViewBag.Title = "Mod Upload";
}

<div class="row">
    <div class="col-md-6">
            @using (Html.BeginForm("Upload", "Mod", null, FormMethod.Post, new { @class = "form-horizontal well", role = "form", enctype = "multipart/form-data" }))
            {
                @Html.ValidationSummary()
                <div class="form-group">
                    @Html.LabelFor(m => m.ModZip, new { @class = "col-md-4 control-label" })
                    <div class="col-md-8">
                        @Html.FileFor(m => m.ModZip, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.ModZip)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-4 col-md-8">
                        <input type="submit" value="Upload" class="btn btn-primary" />
                    </div>
                </div>
            }
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <a class="btn btn-default" href="@(Url.Action("Index", "Mod", new { id = ViewData["ID"] }))">
            <span class="glyphicon glyphicon-chevron-left"></span> Back to Mod List
        </a>
    </div>
</div>
@using SESM.Tools.Helpers
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - SESM</title>
    
    <link href="~/Content/bootstrap-superhero.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    
    <script src="~/Scripts/jquery-2.1.1.min.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/jquery.cookie.js"></script>
    <script src="~/Scripts/jQuery.flashMessage.js"></script>
    
    <link rel="icon" type="image/png" href="~/Content/logo.png" />

</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="@Url.Action("Index", "Home")" ><img src="~/Content/logo.png" style="height: 28px; width: 28px; margin: 6px 15px 0 10px;" /></a>
            </div>
            <div class="navbar-collapse collapse">
                @Html.Partial("_Header")
                @Html.Partial("_HeaderLogin")
            </div>
        </div>
    </div>

    <div class="container body-content">
        @if (SESMConfigHelper.Lockdown)
        {
            <div class="alert alert-dismissable alert-warning">
                <button type="button" class="close" data-dismiss="alert">×</button>
                <h4>Server Update in Progress!</h4>
                <p>SESM is currently applying a Space Enginners update, please wait during this operation.</p>
            </div>
        }
        @Html.Partial("_Flash")
        <h2>@ViewBag.Title</h2>
        <hr />
        @RenderBody()
        <hr />
        <footer>
            <p><a href="http://www.spaceengineersgame.com/">Space Engineers &reg;</a> is a game of <a href="http://www.keenswh.com/"> KEEN SWH LTD</a>.</p>
            <p>SESM is neither affiliated nor supported by KEEN SWH LTD, use it at your own risk. Current Version : 2.1</p>
        </footer>
    </div>
</body>
</html>
@model SESM.Models.Views.Account.LoginViewModel
@{
    ViewBag.Title = "Login";
}
<div class="row">
    <section id="Form">
        @using (Html.BeginForm("Login", "Account", null, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            <div class="col-md-12">
                @Html.ValidationSummary()
                <div class="form-group">
                    @Html.LabelFor(m => m.Login, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Login, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Login)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Password)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Connect" class="btn btn-default" />
                    </div>
                </div>
                <p>
                    If you don't have an Account, you can @Html.ActionLink("register", "Register") one.
                </p>
            </div>
        }
    </section>
</div>

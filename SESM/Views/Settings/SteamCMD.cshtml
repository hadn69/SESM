@model SESM.Models.Views.Settings.SteamCMDViewModel
@{
    ViewBag.Title = "Steam CMD";
}
<div class="row">
    <div class="col-md-6">
        @using (Html.BeginForm("SteamCMD", "Settings", null, FormMethod.Post, new { @class = "form-horizontal well", role = "form" }))
        {
            @Html.ValidationSummary()
            <div class="form-group">
                @Html.LabelFor(m => m.UserName, new { @class = "col-md-4 control-label" })
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.UserName)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Password, new { @class = "col-md-4 control-label" })
                <div class="col-md-8">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Password)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.SteamGuard, new { @class = "col-md-4 control-label" })
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.SteamGuard, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.SteamGuard)
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-4 col-md-8">
                    <div class="btn-group">
                        <input type="submit" value="Initialise" name="action:SaveSteamCMD" class="btn btn-primary" />
                        <input type="submit" value="Triger Steam Guard Code" name="action:FireSteamGuard" class="btn btn-danger" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <a class="btn btn-default" href="@(Url.Action("Index"))">
            <span class="glyphicon glyphicon-chevron-left"></span> Back to Settings
        </a>
    </div>
</div>
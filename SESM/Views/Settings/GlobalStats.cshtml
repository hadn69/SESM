@using SESM.DTO
@{
    ViewBag.Title = "Stats";
    Dictionary<string, List<EntityPerfEntry>> perfEntries = (Dictionary<string, List<EntityPerfEntry>>)ViewData["perfEntries"];
    int i = 0;
}
<script type="text/javascript" src="~/Scripts/amcharts/amcharts.js"></script>
<script type="text/javascript" src="~/Scripts/amcharts/serial.js"></script>
<script type="text/javascript" src="~/Scripts/amcharts/themes/dark.js"></script>
@foreach(KeyValuePair<string, List<EntityPerfEntry>> server in perfEntries)
{
    i++;
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-12 well">
                <h3>@server.Key</h3>
                <div id="chartdiv@(i)" style="width:100%; height:400px;"></div>
                <script type="text/javascript">
                    var chartData@(i) = [
                        @{
                        foreach(EntityPerfEntry item in server.Value)
                        {
                            string outStr = String.Empty;
                            outStr += "{";
                            outStr += "date:new Date(" + item.Timestamp.Year + ", "
                                      + item.Timestamp.Month + ", "
                                      + item.Timestamp.Day + ", "
                                      + item.Timestamp.Hour + ", "
                                      + item.Timestamp.Minute + ", "
                                      + item.Timestamp.Second + "),";
                            outStr += "CPUAvg:" + item.CPUUsage + ",";
                            outStr += "CPUPeak:" + item.CPUUsagePeak + ",";
                            outStr += "CPUTrough:" + item.CPUUsageTrough + ",";
                            outStr += "CPUQ1:" + item.CPUUsageQ1 + ",";
                            outStr += "CPUQ3:" + item.CPUUsageQ3 + ",";

                            outStr += "RAMAvg:" + item.RamUsage + ",";
                            outStr += "RAMPeak:" + item.RamUsagePeak + ",";
                            outStr += "RAMTrough:" + item.RamUsageTrough + ",";
                            outStr += "RAMQ1:" + item.RamUsageQ1 + ",";
                            outStr += "RAMQ3:" + item.RamUsageQ3;
                            outStr += "},\n";
                            @Html.Raw(outStr)
                        }
                    }
                    ];
                    var chart@(i) = AmCharts.makeChart("chartdiv@(i)", {
                        "type": "serial",
                        "theme": "dark",
                        "pathToImages": "@Request.Url.GetLeftPart(UriPartial.Authority)/Scripts/amcharts/images/",
                        "legend": {
                            "useGraphSettings": true
                        },
                        "dataProvider": chartData@(i),
                        "valueAxes": [
                            {
                                "id": "cpuAxis",
                                "axisThickness": 2,
                                "axisColor": "#ffb9f7",
                                "gridAlpha": 0,
                                "axisAlpha": 1,
                                "position": "left",
                                "title": "CPU Usage (in %)"
                            }, {
                                "id": "ramAxis",
                                "axisThickness": 2,
                                "axisColor": "#00b9f7",
                                "gridAlpha": 0,
                                "axisAlpha": 1,
                                "position": "right",
                                "title": "RAM Usage (in MB)"
                            }
                        ],
                        "graphs": [{
                            "valueAxis": "cpuAxis",
                            "connect": false,
                            "lineColor": "#ffb9f7",
                            "fillColor": "#ffb9f7",
                            "fillAlphas": 0.4,
                            "lineThickness": 2,
                            "bullet": "none",
                            "title": "CPU Average Usage",
                            "valueField": "CPUAvg"
                        }, {
                            "valueAxis": "cpuAxis",
                            "connect": false,
                            "lineColor": "#ffb9f7",
                            "fillColor": "#ffb9f7",
                            "fillAlphas": 0.4,
                            "lineThickness": 2,
                            "bullet": "none",
                            "title": "CPU Peak Usage",
                            "valueField": "CPUPeak"
                        }, {
                            "valueAxis": "cpuAxis",
                            "connect": false,
                            "lineColor": "#ffb9f7",
                            "fillColor": "#ffb9f7",
                            "fillAlphas": 0.4,
                            "lineThickness": 2,
                            "bullet": "none",
                            "title": "CPU Trough Usage",
                            "valueField": "CPUTrough"
                        }, {
                            "valueAxis": "cpuAxis",
                            "connect": false,
                            "lineColor": "#ffb9f7",
                            "fillColor": "#ffb9f7",
                            "fillAlphas": 0.4,
                            "lineThickness": 2,
                            "bullet": "none",
                            "title": "CPU First Quartil Usage",
                            "valueField": "CPUQ1"
                        }, {
                            "valueAxis": "cpuAxis",
                            "connect": false,
                            "lineColor": "#ffb9f7",
                            "fillColor": "#ffb9f7",
                            "fillAlphas": 0.4,
                            "lineThickness": 2,
                            "bullet": "none",
                            "title": "CPU Third Quartil Usage",
                            "valueField": "CPUQ3"
                        }, {
                            "valueAxis": "ramAxis",
                            "connect": false,
                            "lineColor": "#00b9f7",
                            "fillColor": "#00b9f7",
                            "fillAlphas": 0.4,
                            "lineThickness": 2,
                            "bullet": "none",
                            "title": "RAM Average Usage",
                            "valueField": "RAMAvg"
                        }, {
                            "valueAxis": "ramAxis",
                            "connect": false,
                            "lineColor": "#00b9f7",
                            "fillColor": "#00b9f7",
                            "fillAlphas": 0.4,
                            "lineThickness": 2,
                            "bullet": "none",
                            "title": "RAM Peak Usage",
                            "valueField": "RAMPeak"
                        }, {
                            "valueAxis": "ramAxis",
                            "connect": false,
                            "lineColor": "#00b9f7",
                            "fillColor": "#00b9f7",
                            "fillAlphas": 0.4,
                            "lineThickness": 2,
                            "bullet": "none",
                            "title": "RAM Trough Usage",
                            "valueField": "RAMTrough"
                        }, {
                            "valueAxis": "ramAxis",
                            "connect": false,
                            "lineColor": "#00b9f7",
                            "fillColor": "#00b9f7",
                            "fillAlphas": 0.4,
                            "lineThickness": 2,
                            "bullet": "none",
                            "title": "RAM First Quartil Usage",
                            "valueField": "RAMQ1"
                        }, {
                            "valueAxis": "ramAxis",
                            "connect": false,
                            "lineColor": "#00b9f7",
                            "fillColor": "#00b9f7",
                            "fillAlphas": 0.4,
                            "lineThickness": 2,
                            "bullet": "none",
                            "title": "RAM Third Quartil Usage",
                            "valueField": "RAMQ3"
                        }],
                        "chartScrollbar": {},
                        "chartCursor": {
                            "categoryBalloonDateFormat": "JJ:NN, DD/MM",
                            "cursorPosition": "mouse"
                        },
                        "categoryField": "date",
                        "categoryAxis": {
                            "minPeriod": "mm",
                            "parseDates": true,
                            "axisColor": "#DADADA",
                            "minorGridEnabled": true
                        }
                    });
                </script>
            </div>
        </div>
    </div>
}

<div class="row">
    <div class="col-md-12">
        <a class="btn btn-default" href="/Settings/HourlyStats/">
            <span class="glyphicon glyphicon-signal"></span> Hourly Stats
        </a>
    </div>
</div>
@using SESM.Tools
@model SESM.Models.Views.Map.UploadMapViewModel
@{
    ViewBag.Title = "Map Upload";
}
<div class="row">
    <div class="col-md-6">
        @using (Html.BeginForm("Upload", "Map", null, FormMethod.Post, new { @class = "form-horizontal well", role = "form", enctype = "multipart/form-data" }))
        {
            @Html.ValidationSummary()
            <div class="form-group">
                @Html.LabelFor(m => m.SaveName, new { @class = "col-md-4 control-label" })
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.SaveName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.SaveName)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.SaveZip, new { @class = "col-md-4 control-label" })
                <div class="col-md-8">
                    @Html.FileFor(m => m.SaveZip, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.SaveZip)
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-4 col-md-8">
                    <input type="submit" value="Upload" class="btn btn-primary" />
                </div>
            </div>
        }
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <a class="btn btn-default" href="@(Url.Action("Index", "Map", new { id = ViewData["ID"] }))">
            <span class="glyphicon glyphicon-chevron-left"></span> Back to Map List
        </a>
    </div>
</div>
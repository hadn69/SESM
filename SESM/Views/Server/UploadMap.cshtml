@using SESM.Tools
@model SESM.Models.UploadMapViewModel

@{
    ViewBag.Title = "Map Upload";
}

<h2>@ViewBag.Title</h2>


<div class="row">
    <div class="col-md-12">
        <section id="loginForm">
            @using (Html.BeginForm("UploadMap", "Server", null, FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
            {
                @Html.ValidationSummary()
                <div class="form-group">
                    @Html.LabelFor(m => m.SaveName, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.SaveName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.SaveName)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.SaveZip, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.FileFor(m => m.SaveZip, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.SaveZip)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Upload" class="btn btn-default" />
                    </div>
                </div>
            }
        </section>
    </div>

</div>


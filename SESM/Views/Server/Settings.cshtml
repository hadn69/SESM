                                            <div class="col-md-6">
                                                <input type="checkbox" id="inpLvl2BackupEnabled">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="control-label col-md-3">Infos</label>
